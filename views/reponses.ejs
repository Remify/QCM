<% layout('layout') %>
<% script('/js/admin.front.js') %>

<h1 class="red-h1"> Gestion des réponses</h1>

<div class="edit-question">
    <h2 class="blue-h2"> Modifiez les réponses associées</h2>
    <p class="dark-p">Cliquez sur les intitulés pour les modifier</p>
    <% reponses.forEach(function (reponse) { %>
    <form action="/admin/question/editR" class="formNewQuestion" method="post">
        <div class="reponses">
            <div class="Values">
                <p><%= reponse.intitule %></p>
                <input type="hidden" name="id" value="<%= reponse.id %>">
                <input type="hidden" name="Qid" value="<%= reponse.question_id %>">
                <input id="qValue<%= reponse.id %>" name="rValue" type="hidden" value="<%= reponse.intitule %>">
            </div>
            <div class="flex-btn">
                <input class="blue-button" type="submit" name="action" value="Enregistrer">
                <input class="red-button" type="submit" name="action" value="Supprimer">
            </div>
        </div>

    </form>
    <% }) %>

    <form action="/admin/reponse/new" class="formNewResponse" method="post">
        <div class="reponses">
            <div class="reponse">
                <label>Réponse <span>1</span>:</label>
                <input type="text" name="rIntitule" data-nb-rep="1">
                <input type="hidden" name="Qid" value="<%= reponses[0].question_id %>">
                <input type="submit" value="Ajouter">
            </div>

        </div>
    </form>

    <button class="black-button" type="button" id="addResponseButton">Ajouter une réponse</button>


</div>