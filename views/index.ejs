<!DOCTYPE html>
<html>
<head>
    <title></title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <script src="/socket.io/socket.io.js"></script>
    <script src="js/jquery-3.1.1.slim.min.js"></script>
    <script src="js/qcm.js"></script>
    <script>
        var socket = io.connect('http://localhost:3000');
    </script>
</head>
<body>

    <div class="containter">
        <% questions.forEach(function(question) { %>
        <div class="question" data-id="<%= question.id %>">
              <span>
                <h2><%= question.titre %></h2>
              </span>
            <div class="reponse">
                <form>
                    <% question.reponses.forEach(function(reponse) { %>
                    <input type="radio" name="reponse" data-question-id="<%= question.id %>" id="<%= question.id + "-" + reponse.id %>" value="<%= reponse.id %>"/>
                    <label for="<%= question.id + "-" + reponse.id %>"><%= reponse.text %></label><br/>
                    <% }); %>
                </form>
            </div>
        </div>
        <% }); %>
    </div>
</body>
</html>
