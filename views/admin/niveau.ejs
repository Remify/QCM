<% layout('../layout') %>
<% script('/js/admin.front.js') %>
<% stylesheet('/stylesheets/admin.css') -%>


<h1 class="red-h1">Gestion des niveaux</h1>

<div class="view-niveau">

    <div class="leftMenu">
        <h2 class="blue-h2">Niveaux disponibles</h2>
        <p class="dark-p">Sélectionnez un niveau pour le modifier</p>
        <ul>
            <% niveaux.forEach(function (niveau) { %>
            <li><a href="<%= niveau.id %>"><%= niveau.intitule %></a></li>
            <% })%>

            <li class="newNiveau">
                <form method="post" action="/admin/niveau/new">
                    <input type="text" name="intitule" placeholder="Ajouter un niveau">
                    <input class="blue-button" type="submit" value="Ajouter" >
                </form>
            </li>
        </ul>
    </div>

    <% if(niveau) { %>

    <div class="niveau">
        <h3 class="orangered-h2">Modification du niveau : <strong><%= niveau.intitule%></strong></h3>
        <form method="post" action="/admin/niveau/edit">
            <h2><%= niveau.intitule %></h2>
            <input type="hidden" name="id" value="<%= niveau.id%>">
            <input id="inputIntitule" name="intitule" type="hidden" value="<%=niveau.intitule%>">
            <input id="submitNiveau" type="submit" value="Mettre à jour" style="display: none"><br>
            <i class="fa fa-info-circle" aria-hidden="true">Cliquez sur le titre pour modifier l'intitulé du niveau</i>
        </form>
        <form method="post" action="/admin/niveau/delete">
            <input type="hidden" name="id" value="<%= niveau.id%>">
            <input class="red-button" id="submitNiveau" type="submit" value="Supprimer" >
        </form>
    </div>

    <% } %>

</div>

